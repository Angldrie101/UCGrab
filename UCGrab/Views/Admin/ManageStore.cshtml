@model IEnumerable<UCGrab.Database.Store>

@{
    ViewBag.Title = "ManageStore";
    Layout = "~/Views/Shared/AdminPageLayout.cshtml";
}

<!-- Store Management Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Store Management</span></h2>
    <div class="row px-xl-5">
        <!-- Store List Table -->
        <div class="col-lg-12 mb-5">
            <div class="bg-light p-30 mb-30">
                <h5 class="card-title">List of Stores</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Store ID</th>
                            <th>Store Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="store-list">
                        @foreach (var store in Model)
                        {
                            <tr>
                                <td>@store.id</td>
                                <td>@store.store_name</td>
                                <td>@store.store_address</td>
                                <td>@store.phone</td>
                                <td>@store.email</td>
                                <td>
                                    <a href="/Admin/EditStore/@store.id" class="btn btn-primary btn-sm">Detail</a>
                                    <a href="/Admin/DeleteStore/@store.id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Store Management End -->
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
