@model UCGrab.Database.Store

@{
    ViewBag.Title = "MyStore";
    Layout = "~/Views/Shared/ShopPageLayout.cshtml";
}

<!-- Store Information Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Store Information</span>
    </h2>
    <div class="row px-xl-5">
        <div class="col-lg-6 mb-5">
            @if (!String.IsNullOrEmpty(TempData["Message"] as String))
            {
                <span class="alert alert-success">@TempData["Message"]</span>
                <br />
            }
            <div class="bg-light p-30 mb-30">
                <h5 class="card-title"><i class="fas fa-store mr-2"></i>Store Details</h5>
                <div class="mb-3">
                    <label for="storeName" class="form-label">Store Name</label>
                    <h4 id="storeName">@Html.DisplayFor(model => model.store_name)</h4>
                </div>
                <div class="mb-3">
                    <label for="storeAddress" class="form-label">Store Address</label>
                    <h4 id="storeAddress">@Html.DisplayFor(model => model.store_address)</h4>
                </div>
                <div class="mb-3">
                    <label for="storeEmail" class="form-label">Email</label>
                    <h4 id="storeEmail">@Html.DisplayFor(model => model.email)</h4>
                </div>
                <div class="mb-3">
                    <label for="storePhone" class="form-label">Phone</label>
                    <h4 id="storePhone">@Html.DisplayFor(model => model.phone)</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-5">
            <div class="bg-light p-30 mb-30">
                <h5 class="card-title"><i class="fas fa-clock mr-2"></i>Operating Hours</h5>
                <form method="post" action="/YourController/UpdateStore">
                    <div class="form-group">
                        <label for="storeHours" class="form-label">Store Hours</label>
                        <textarea class="form-control" id="storeHours" name="operating_hours" rows="5">@Model.operating_hours</textarea>
                    </div>
                    <input type="hidden" name="user_id" value="@Model.user_id" />
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col-lg-12 mb-5">
            <div class="bg-light p-30 mb-30">
                <h5 class="card-title"><i class="fas fa-info-circle mr-2"></i>About Our Store</h5>
                <form method="post" action="/YourController/UpdateStore">
                    <div class="form-group">
                        <label for="aboutStore" class="form-label">About Our Store</label>
                        <textarea class="form-control" id="aboutStore" name="store_description" rows="5">@Model.store_description</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Store Information End -->
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="/Assets/Shop/lib/easing/easing.min.js"></script>
<script src="/Assets/Shop/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Contact Javascript File -->
<script src="/Assets/Shop/mail/jqBootstrapValidation.min.js"></script>
<script src="/Assets/Shop/mail/contact.js"></script>

<!-- Template Javascript -->
<script src="/Assets/Shop/js/main.js"></script>
