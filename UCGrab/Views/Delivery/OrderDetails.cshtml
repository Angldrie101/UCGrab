@model UCGrab.Models.OrderViewModel

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_DeliveryLayoutPage.cshtml";
}
<style>
    .order-details-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px auto;
        max-width: 1000px;
    }

    .order-details-card, .image-card {
        flex: 1;
        min-width: 400px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
    }

        .order-details-card .card-header, .image-card .card-header {
            font-size: 1.5em;
            font-weight: bold;
        }

        .order-details-card .card-body, .image-card .card-body {
            font-size: 1.2em;
        }

        .order-details-card .list-group-item {
            font-size: 1.1em;
        }

    .back-button {
        margin-top: 20px;
        display: block;
        text-align: center;
    }

    .store-image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
    }
</style>

<div class="order-details-container">
    <div class="card order-details-card">
        <div class="card-header">
            Order #@Model.OrderId
        </div>
        <div class="card-body">
            <h5 class="card-title">Customer: @Model.Firstname @Model.Lastname</h5>
            <p class="card-text">
                Address: @Model.Building at room @Model.Room<br />
                Total: Php @Model.Total
            </p>
            <h5>Items</h5>
            <ul class="list-group">
                @foreach (var product in Model.Products)
                {
                    <li class="list-group-item">
                        <strong>@product.ProductName</strong><br />
                        Quantity: @product.Quantity<br />
                        Price: Php @product.Price
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="card image-card">
        <div class="card-header">
            Store Location
        </div>
        <div class="card-body">
            <img src="@Model.StoreImageUrl" alt="Store Image" class="store-image">
        </div>
    </div>
</div>
<a href="/Delivery/Orders" class="btn btn-secondary back-button">Back to Orders</a>
