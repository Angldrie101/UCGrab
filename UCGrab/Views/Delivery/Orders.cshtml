@{
    Layout = "~/Views/Shared/_DeliveryLayoutPage.cshtml";
}

<style>
    .carousel-item {
        text-align: center;
    }

    .card {
        margin: 0 auto;
        max-width: 600px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: dodgerblue;
    }
</style>

<h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Orders</span></h2>
<div id="orderCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
        <!-- Sample order item, this will be generated dynamically in actual implementation -->
        <div class="carousel-item active">
            <div class="card">
                <div class="card-header">
                    Order #1
                </div>
                <div class="card-body">
                    <h5 class="card-title">Customer: John Doe</h5>
                    <p class="card-text">
                        Address: 123 Main St<br />
                        Items: 3<br />
                        Total: $59.99
                    </p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card">
                <div class="card-header">
                    Order #2
                </div>
                <div class="card-body">
                    <h5 class="card-title">Customer: Jane Smith</h5>
                    <p class="card-text">
                        Address: 456 Elm St<br />
                        Items: 5<br />
                        Total: $89.99
                    </p>
                    <a href="/Delivery/OrderDetails" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <!-- Add more carousel items as needed -->
    </div>
    <a class="carousel-control-prev" href="#orderCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#orderCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
